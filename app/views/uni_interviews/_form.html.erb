      <%= f.number_field :examiners, {:class=>"span2"} %>
      <p class="help-block">半角数字 0以上</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, '面接時間', {:class => "control-label"}%>
    <div class="controls">
      <%= f.number_field :time, :step => 5, :class=>"span2" %>（分）
      <p class="help-block">半角数字 0以上</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :deatails, '面接の内容（できるだけ詳細に）', {:class => "control-label"} %>
