<div class=search>
    <%= form_tag({:controller => 'search',:action => 'result'}, {:class => "form-inline"}) do -%>
        <%= select_tag :target, options_for_select( {"就職試験報告書" => false, "進学試験報告書" => true}),
                {:class => "span2"} -%>
        <%= text_field_tag :name, '',{:class => "input-medium search-query",:placeholder=>"企業名 or 大学名"} -%>
        <%= submit_tag '検索', {:class => "btn"} -%>
    <% end %>
</div>
