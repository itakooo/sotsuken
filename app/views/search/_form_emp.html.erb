
  <h3>就職試験報告書の検索</h3>
  
  <%= form_tag({:action => 'result_emp'}, {:class => "form-horizontal"}) do %>
    
    <div class="control-group">
      <label class="control-label">企業名</label>
      <div class="controls">
        <%= text_field_tag :name, '',{:class => "input-medium search-query"} %>
      </div>
    </div>
    
    <div class="control-group">
      <label class="control-label">企業の所在地</label>
      <div class="controls">
        <%= text_field_tag :location, '',{:class => "input-medium search-query"} %>
      </div>
    </div>
    
    <div class="control-group">
      <label class="control-label">応募区分</label>
      <div class="controls">
        <%= select_tag :glouping, options_for_select( {"推薦" => "suisen", "自由" => "jiyu"}),
                    {:include_blank => true, :class => "span3"} %>
      </div>
    </div>
    
    
    <div class="form-actions" style="background-color:transparent;">
      <%= submit_tag '検索', {:class => "btn"}%>
    </div>
  <% end %>
